<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:commands="clr-namespace:GitStache.Commands">
    <ContextMenu
        x:Shared="false"
        x:Key="StacheTrayMenu">
        <MenuItem
            Header="Close"
            Command="{commands:CloseWindowCommand}"
            CommandParameter="{Binding}">
            <MenuItem.Icon>
                <TextBlock
                    TextAlignment="Center"
                    FontSize="15px"
                    Text="&#xf00d;"
                    FontFamily="pack://application:,,,/fonts/#FontAwesome" />
            </MenuItem.Icon>
        </MenuItem>
    </ContextMenu>
</ResourceDictionary>